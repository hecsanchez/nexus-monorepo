# ============================================================================
# API Server Configuration
# ============================================================================
# The port where the API server will run
API_PORT=3000
# The environment (development, production, test)
NODE_ENV=development
# The URL for the Client App
CLIENT_URL=http://localhost:5173
# The URL For the Admin App
ADMIN_URL=http://localhost:5174

# ============================================================================
# Database Configuration
# ============================================================================
# PostgreSQL connection URL
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public
DATABASE_URL=postgresql://user:password@localhost:5432/nexus?schema=public

# ============================================================================
# Authentication & Security
# ============================================================================
# Secret key for JWT token generation (use a strong random string in production)
JWT_SECRET=your-jwt-secret-here
# JWT token expiration time (e.g., 1h, 7d, 30d)
JWT_EXPIRATION=30d
# JWT refresh token expiration time
JWT_REFRESH_EXPIRATION=7d
# Password salt rounds for bcrypt
PASSWORD_SALT_ROUNDS=10


# ============================================================================
# Admin App Configuration
# ============================================================================
# The URL where the API server is accessible from the admin app
ADMIN_API_URL=http://localhost:3000
# The port where the admin app will run
ADMIN_PORT=5174

# ============================================================================
# Client App Configuration
# ============================================================================
# The URL where the API server is accessible from the client app
CLIENT_API_URL=http://localhost:3000
# The port where the client app will run
CLIENT_PORT=5173
